
{{#profiles}}
<div class="list-group">
  {{!-- Super Row --}}
  <div class="list-group-item flex-row d-flex mb-3 mt-3">
    {{!-- Profile --}}
    <a href = "/user?id={{id}}&btc={{btc}}&eth={{eth}}&ltc={{ltc}}" class="flex-column d-flex align-items-center list-group-item-action">
      {{!-- Username --}}
      <div class="d-flex flex-row mb-3 mt-3">
        {{name}}
      </div>
      {{!-- /Username --}}

      {{!-- Headshot --}}
      <div class="d-flex flex-row mb-3 mt-3">
        <img src="http://buildbetterresults.com/wp-content/uploads/2017/09/Person-3.png" class=" w-50 h-50 img-responsive rounded mx-auto d-block">
      </div>
      {{!-- /Headshot --}}

      {{!-- Wallet Count --}}
      <div class="d-flex flex-row mb-3 mt-3 align-items-center">
        {{!-- BTC --}}
        <div class="rounded-pill mr-3">BTC</div>
        <span class="mx-25 center badge badge-primary badge-pill mr-3">{{btc}}</span>
        {{!-- /BTC --}}

        {{!-- ETH --}}
        <div class="rounded-pill mr-3">ETH</div>
        <span class="mx-25 center badge badge-primary badge-pill mr-3">{{eth}}</span>
        {{!-- /ETH --}}

        {{!-- LTC --}}
        <div class="rounded-pill mr-3">LTC</div>
        <span class="mx-25 center badge badge-primary badge-pill mr-3">{{ltc}}</span>
        {{!-- /LTC --}}

      {{!-- /Wallet Count --}}
      </div>
    </a>
    {{!-- /Profile --}}
  </div>
{{!-- Super Row --}}
{{/profiles}}